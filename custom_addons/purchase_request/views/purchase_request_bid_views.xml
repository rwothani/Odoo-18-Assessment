<odoo>

    <!-- Vendor Bid List View -->
    <record id="view_purchase_request_bid_list" model="ir.ui.view">
        <field name="name">purchase.request.bid.list</field>
        <field name="model">purchase.request.bid</field>
        <field name="arch" type="xml">
            <list>
                <field name="request_id"/>
                <field name="vendor_id"/>
                <field name="price_total"/>
                <field name="delivery_days"/>
                <field name="state"/>
                <field name="is_winner"/>
            </list>
        </field>
    </record>

    <!-- Vendor Bid Form View -->
    <record id="view_purchase_request_bid_form" model="ir.ui.view">
        <field name="name">purchase.request.bid.form</field>
        <field name="model">purchase.request.bid</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="request_id"/>
                        <field name="vendor_id"/>
                        <field name="price_total"/>
                        <field name="delivery_days"/>
                        <field name="state"/>
                        <field name="is_winner"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>